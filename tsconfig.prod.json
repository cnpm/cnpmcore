{
  "extends": "@eggjs/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "include": [
    "app/**/*.ts",
    "app/**/*.json",
    "config/**/*.ts",
    "typings/**/*.ts",
    "app.ts"
  ]
}
